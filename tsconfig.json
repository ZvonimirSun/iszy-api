{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "~/*": ["src/*"],
      "~types/*": ["src/types/*"],
      "~core/*": ["src/core/*"],
      "~modules/*": ["src/modules/*"],
      "~entities/*": ["src/entities/*"],
      "~utils/*": ["src/utils/*"]
    }
  }
}
