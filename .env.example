# ======================
# Database Configuration
# ======================
# Database dialect (postgres, mysql, mariadb, sqlite, mssql)
DATABASE_DIALECT=postgres
DATABASE_HOST=127.0.0.1
DATABASE_PORT=5432
DATABASE_USERNAME=your_username
DATABASE_PASSWORD=your_password
DATABASE_DATABASE=your_database
DATABASE_SCHEMA=public

# Optional database settings
# DATABASE_TIMEZONE=+08:00
# DATABASE_LOGGING=false
# DATABASE_SYNCHRONIZE=false

# Database pool configuration
# DATABASE_POOL_MAX=10
# DATABASE_POOL_MIN=0
# DATABASE_POOL_IDLE=10000
# DATABASE_POOL_ACQUIRE=60000
# DATABASE_POOL_EVICT=1000

# ======================
# Redis Configuration
# ======================
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password
# REDIS_DB=0
# REDIS_FAMILY=4
# REDIS_CONNECT_TIMEOUT=10000
# REDIS_KEEP_ALIVE=30000

# ======================
# Application Configuration
# ======================
APP_PORT=3000
APP_ORIGIN=http://localhost:3000
APP_TITLE='ISZY API'
APP_DESCRIPTION='ISZY API description'

# CORS allowed origins (comma-separated)
# APP_ALLOW_ORIGINS=http://localhost:8080,https://example.com

# Request body size limit
APP_BODY_LIMIT=200mb

# ======================
# Authentication Configuration
# ======================
# Allow public registration
AUTH_PUBLIC_REGISTER=false

# JWT configuration
AUTH_JWT_SECRET=your_jwt_secret_key_change_this_in_production
AUTH_JWT_EXPIRE=1d
AUTH_JWT_REFRESH_EXPIRE=7d

# GitHub OAuth
# AUTH_GITHUB_CLIENT_ID=your_github_client_id
# AUTH_GITHUB_CLIENT_SECRET=your_github_client_secret
# AUTH_GITHUB_CALLBACK_URL=http://localhost:3000/auth/github/callback

# LinuxDo OAuth
# AUTH_LINUXDO_CLIENT_ID=your_linuxdo_client_id
# AUTH_LINUXDO_CLIENT_SECRET=your_linuxdo_client_secret
# AUTH_LINUXDO_CALLBACK_URL=http://localhost:3000/auth/linuxdo/callback

# ======================
# System Configuration
# ======================
# Behind proxy (for production deployment)
BEHIND_PROXY=false
# TRUST_PROXY=loopback

# Development mode
DEVELOPMENT=false

# System proxy for outbound requests
# SYSTEM_PROXY=http://proxy.example.com:8080

# ======================
# Notes
# ======================
# 1. Environment variables have the highest priority
# 2. For nested configuration, use underscore notation:
#    DATABASE_POOL_MAX maps to database.pool.max
# 3. Boolean values: use 'true' or 'false' (lowercase)
# 4. Numeric values: plain numbers without quotes
# 5. JSON values: use JSON syntax for complex objects
# 6. For production, use .env.local to override .env settings
